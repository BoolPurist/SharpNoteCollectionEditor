<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <ControlTemplate x:Key="InfoBox" TargetType="ContentControl">
        <Border Background="Blue"
                Padding="20"
                BorderThickness="5"
                BorderBrush="Aqua"
                Opacity="0.5"
                HorizontalAlignment="Center">
            <TextBlock
                FontWeight="Bold"
                FontSize="25"
                Text="{TemplateBinding Tag}"
            />
        </Border>
    </ControlTemplate>
</ResourceDictionary>
