<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:NoteCollectionEditor"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="NoteCollectionEditor.App">
  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme Mode="Light" />
  </Application.Styles>
  <Application.Resources>
    <Image
      Width="64"
      Height="64"
      x:Key="AddIcon"
      Source="./Assets/AddIcon.png" />
    <Image
      Width="32"
      Height="32"
      x:Key="PencilIcon"
      Source="./Assets/pencil-solid.png" />
    <SolidColorBrush x:Key="NoteColor" Color="#FF9200" />
  </Application.Resources>
</Application>
