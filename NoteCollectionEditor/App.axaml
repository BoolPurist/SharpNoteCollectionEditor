<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:NoteCollectionEditor"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             x:Class="NoteCollectionEditor.App">
  <Application.DataTemplates>
    <local:ViewLocator />
  </Application.DataTemplates>

  <Application.Styles>
    <FluentTheme Mode="Light" />
  </Application.Styles>
  <Application.Resources>
    <SolidColorBrush x:Key="NoteColor" Color="#FF9200" />

    <KeyGesture x:Key="SaveHotKey">Ctrl+S</KeyGesture>
    <KeyGesture x:Key="LoadHotKey">Ctrl+L</KeyGesture>
  </Application.Resources>
</Application>
