<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="NoteCollectionEditor.Views.Dialogs.AskPopUpDialog"
        Title="AskPopUpDialog"
        SizeToContent="WidthAndHeight"
        DataContext="{Binding RelativeSource={RelativeSource Self}}">
  <StackPanel Margin="30">
    <TextBox Text="{Binding WarningText}"
               TextAlignment="Center"
               FontSize="20"
               FontWeight="Bold"
               Foreground="#AD9407"
               Background="Transparent"
               BorderThickness="0"
               IsReadOnly="True"
               TextWrapping="Wrap"/>
    <StackPanel Margin="0,10,0,0" Orientation="Horizontal" HorizontalAlignment="Center">
      <Button Content="{Binding ConfirmDespiteWarningText}"
              Command="{Binding CommandCloseWithConfirmation}"
              FontWeight="Bold"
              FontSize="20"
              Margin="0,0,10,0"
              />
      <Button Content="Cancel"
              FontWeight="Bold"
              FontSize="20"
              Command="{Binding CommandCloseWithConfirmation}"
              />
    </StackPanel>
  </StackPanel>
</Window>

